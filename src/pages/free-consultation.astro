---
import BaseLayout from '../layouts/BaseLayout.astro';

const webhookUrl = "https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/mva-site-lead";
---

<BaseLayout 
  title="Free Consultation"
  description="Get a free, no-obligation case evaluation from an experienced hit and run accident attorney. No fees unless you win."
>
  <section class="py-20 bg-gradient-to-br from-primary to-primary-dark text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Free Case Consultation</h1>
      <p class="text-xl text-accent-silver mb-4">
        Victim of a hit and run accident? Get the legal help you deserve.
      </p>
      <div class="flex flex-wrap justify-center gap-4 text-lg">
        <span class="bg-white/20 px-4 py-2 rounded-full">‚úì 100% Free</span>
        <span class="bg-white/20 px-4 py-2 rounded-full">‚úì No Obligation</span>
        <span class="bg-white/20 px-4 py-2 rounded-full">‚úì Confidential</span>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Form - Takes 2 columns -->
        <div class="md:col-span-2 bg-gray-50 p-8 rounded-xl">
          <h2 class="text-2xl font-bold mb-6">Tell Us About Your Hit and Run Accident</h2>
          
          <form action={webhookUrl} method="POST" class="space-y-6">
            <input type="hidden" name="source" value="free-consultation" />
            <input type="hidden" name="site" value="hitandrunlawyer.net" />
            <input type="hidden" name="caseType" value="hit-and-run" />
            
            <!-- Personal Info -->
            <div>
              <h3 class="font-semibold mb-4 text-primary">Your Information</h3>
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium mb-1">First Name *</label>
                  <input type="text" name="firstName" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary" />
                </div>
                <div>
                  <label class="block text-sm font-medium mb-1">Last Name *</label>
                  <input type="text" name="lastName" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary" />
                </div>
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium mb-1">Email *</label>
                <input type="email" name="email" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary" />
              </div>
              <div>
                <label class="block text-sm font-medium mb-1">Phone *</label>
                <input type="tel" name="phone" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary" />
              </div>
            </div>
            
            <!-- Accident Info -->
            <div>
              <h3 class="font-semibold mb-4 text-primary">Accident Details</h3>
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium mb-1">Your Role in the Accident *</label>
                  <select name="accidentType" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary">
                    <option value="">Select your role...</option>
                    <option value="driver-struck">I was driving and was hit</option>
                    <option value="passenger">I was a passenger in a vehicle that was hit</option>
                    <option value="pedestrian">I was a pedestrian struck by a vehicle</option>
                    <option value="cyclist">I was a cyclist struck by a vehicle</option>
                    <option value="parked-vehicle">My parked vehicle was hit</option>
                    <option value="motorcyclist">I was a motorcyclist struck by a vehicle</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium mb-1">Was the Driver Found? *</label>
                  <select name="driverFound" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary">
                    <option value="">Select...</option>
                    <option value="yes-identified">Yes, driver was identified</option>
                    <option value="no-fled">No, driver fled and is unknown</option>
                    <option value="partial-info">Have partial info (plate, description)</option>
                    <option value="police-investigating">Police are still investigating</option>
                  </select>
                </div>
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium mb-1">When did the accident happen? *</label>
                <select name="accidentTiming" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary">
                  <option value="">Select timeframe...</option>
                  <option value="today">Today</option>
                  <option value="this-week">This week</option>
                  <option value="this-month">This month</option>
                  <option value="1-3-months">1-3 months ago</option>
                  <option value="3-6-months">3-6 months ago</option>
                  <option value="6-12-months">6-12 months ago</option>
                  <option value="over-1-year">Over 1 year ago</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium mb-1">State where accident occurred *</label>
                <input type="text" name="state" required placeholder="e.g., California" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary" />
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium mb-1">Were you injured? *</label>
                <select name="injured" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary">
                  <option value="">Select...</option>
                  <option value="yes-severe">Yes, severe injuries</option>
                  <option value="yes-moderate">Yes, moderate injuries</option>
                  <option value="yes-minor">Yes, minor injuries</option>
                  <option value="no">No injuries</option>
                  <option value="unknown">Unknown/Delayed symptoms</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium mb-1">Do you have UM/UIM coverage?</label>
                <select name="umCoverage" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary">
                  <option value="">Select if known...</option>
                  <option value="yes">Yes, I have UM/UIM coverage</option>
                  <option value="no">No, I don't have UM/UIM coverage</option>
                  <option value="unknown">I'm not sure</option>
                </select>
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium mb-1">Tell us what happened</label>
              <textarea name="description" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-secondary" placeholder="Describe the hit and run accident, any details about the fleeing vehicle, your injuries, and any other relevant details..."></textarea>
            </div>
            
            <div class="flex items-start gap-2">
              <input type="checkbox" id="consultConsent" name="consent" required class="mt-1" />
              <label for="consultConsent" class="text-sm text-gray-600">
                I agree to receive communications about my case and understand an attorney will contact me. I have read the <a href="/privacy-policy/" class="underline">Privacy Policy</a> and <a href="/disclaimer/" class="underline">Legal Disclaimer</a>.
              </label>
            </div>
            
            <button type="submit" class="w-full bg-primary hover:bg-primary-dark text-white font-bold py-4 px-6 rounded-lg text-lg transition transform hover:scale-[1.02] shadow-lg">
              üöó Get My Free Case Review Now
            </button>
            
            <p class="text-center text-sm text-gray-500">
              üîí Your information is secure and confidential
            </p>
          </form>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <div class="bg-primary text-white p-6 rounded-xl">
            <h3 class="text-xl font-bold mb-4">Why Choose Us?</h3>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>No fees unless you win</span>
              </li>
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>Experienced hit and run attorneys</span>
              </li>
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>$100M+ recovered for clients</span>
              </li>
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>24/7 availability</span>
              </li>
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>Free case evaluation</span>
              </li>
            </ul>
          </div>

          <div class="bg-gray-50 p-6 rounded-xl">
            <h3 class="font-bold mb-4">‚è±Ô∏è Time Matters</h3>
            <p class="text-gray-600 text-sm">
              Evidence disappears. Witnesses forget. Statutes of limitations expire. The sooner you contact us, the stronger your case.
            </p>
          </div>

          <div class="bg-primary/10 p-6 rounded-xl border border-primary">
            <h3 class="font-bold mb-4">üõ°Ô∏è UM/UIM Coverage</h3>
            <p class="text-gray-600 text-sm">
              Even if the driver is never found, you may still recover compensation through your own Uninsured Motorist coverage. We'll help you navigate the claims process.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
